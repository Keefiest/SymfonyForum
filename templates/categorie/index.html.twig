{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}

{% block body %}
    <h2>Catégories({{ categories.getTotalItemCount }})</h2>
    <a href="{{path('add_categorie')}}"><h4>Ajouter une catégorie</h4></a>

    {% for categorie in categories %}
    <a href="{{ path('app_sujet', {'id': categorie.id}) }}">{{categorie}}</a>
    <a href="{{ path('edit_categorie', {'id': categorie.id}) }}"><i class="fa-solid fa-pen-to-square"></i></a>
    </br>
    {% endfor %}

    {{ knp_pagination_render(categories) }}
{% endblock %}
